{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@taskly/authentication-smart": [
        "libs/authentication/smart/src/index.ts"
      ],
      "@taskly/authentication-ui": ["libs/authentication/ui/src/index.ts"],
      "@taskly/dashboard-smart": ["libs/dashboard/smart/src/index.ts"],
      "@taskly/dashboard-ui": ["libs/dashboard/ui/src/index.ts"],
      "@taskly/shared": ["libs/shared/src/index.ts"],
      "@taskly/task-calendar-smart": [
        "libs/task-workflow/task-calendar/smart/src/index.ts"
      ],
      "@taskly/task-calendar-ui": [
        "libs/task-workflow/task-calendar/ui/src/index.ts"
      ],
      "@taskly/task-kanban-smart": [
        "libs/task-workflow/task-kanban/smart/src/index.ts"
      ],
      "@taskly/task-kanban-ui": [
        "libs/task-workflow/task-kanban/ui/src/index.ts"
      ],
      "@taskly/task-todo-list-smart": [
        "libs/task-workflow/task-todo-list/smart/src/index.ts"
      ],
      "@taskly/task-todo-list-ui": [
        "libs/task-workflow/task-todo-list/ui/src/index.ts"
      ],
      "@taskly/user-profile-preferences-smart": [
        "libs/user-profile/preferences/smart/src/index.ts"
      ],
      "@taskly/user-profile-preferences-ui": [
        "libs/user-profile/preferences/ui/src/index.ts"
      ],
      "@taskly/user-profile-settings-smart": [
        "libs/user-profile/settings/smart/src/index.ts"
      ],
      "@taskly/user-profile-settings-ui": [
        "libs/user-profile/settings/ui/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
